<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#CFCBCB"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите вес"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Выберите исходную единицу:" />

    <RadioGroup
        android:id="@+id/fromUnitGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/fromKilogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Килограмм" />

        <RadioButton
            android:id="@+id/fromPound"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Фунт" />

        <RadioButton
            android:id="@+id/fromPood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пуд" />

        <RadioButton
            android:id="@+id/fromLot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Лот" />

    </RadioGroup>

    <TextView
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:text="Выберите конечную единицу:" />

    <RadioGroup
        android:id="@+id/toUnitGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/toKilogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Килограмм" />

        <RadioButton
            android:id="@+id/toPound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фунт" />

        <RadioButton
            android:id="@+id/toPood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пуд" />

        <RadioButton
            android:id="@+id/toLot"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Лот" />

    </RadioGroup>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="365dp"
        android:layout_height="66dp"
        android:text="Результат: "
        android:textSize="18sp"
        app:drawableTint="#FFFFFF" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0043FF"
        android:shadowColor="#000000"
        android:text="Конвертировать вес"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#0E0E0E"
        android:textColorLink="#040303" />

</LinearLayout>
